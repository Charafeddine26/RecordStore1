@using RecordStore.Models



@model IEnumerable<Disque>

@{
    ViewData["Title"] = "List of Disques";
}
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Album
                                        <a class="text-white float-right" ><i class="bi bi-pencil-square"></i></a>
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Cover" width="100%" alt="@item.Album">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.Album</p>
                            <p class="card-text"><b>Label: </b>@item.Label.Nom</p>
                            <p class="card-text"><b>Genre: </b>@item.Genre.DisqueGenre</p>
                            <p class="card-text"><b>Pressing :</b>@item.Pressing</p>
                            <p class="card-text"><b>Release : </b>@item.Annee</p>
                            <p class="card-text ">
                               
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>

                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
